{
  "name": "oba-live-tool",
  "type": "module",
  "version": "1.1.5",
  "private": true,
  "description": "抖音直播工具，用于直播带货，能自动弹窗，自动发言",
  "author": "OBA Douyin Live Streaming Department",
  "license": "MIT",
  "main": "dist-electron/main/index.js",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "pretest": "vite build --mode=test",
    "test": "vitest run",
    "prepare": "husky",
    "release": "pnpm build && bumpp && git push --follow-tags"
  },
  "dependencies": {
    "electron-updater": "6.4.1",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "playwright": "^1.50.0",
    "react-router": "^7.1.3",
    "signale": "^1.4.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@eslint-react/eslint-plugin": "^1.24.1",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.0",
    "@types/signale": "^1.4.7",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "builder-util-runtime": "^9.2.10",
    "bumpp": "^10.0.1",
    "electron": "^34.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.0.4"
  },
  "lint-staged": {
    "*": "eslint --cache --fix"
  }
}
